<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_toobar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="扫描"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_out_package"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退件"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_need_out_package"
            android:gravity="center"
            android:text="需要退件快递"
            android:textColor="@color/text_color"
            android:background="@color/menuCheckColor"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_flash"
        android:layout_below="@+id/ll_menu"
        android:background="#40000000">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/tv_scan_flash_title"
            android:gravity="center"
            android:text="将条形码/手机号放入框内"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_scan_flash_title"
            android:layout_toRightOf="@+id/tv_scan_flash_title"
            android:scaleType="centerInside"
            android:src="@drawable/flash_on_y" />

    </RelativeLayout>

</RelativeLayout>