<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">
    <View
        android:id="@+id/vv_top_padding"
        android:layout_width="match_parent"
        android:layout_height="72dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_package_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="数量:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <TextView
                android:id="@+id/et_package_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <TextView
                android:id="@+id/btn__hh_re_start_scaner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="right|center"
                android:text="继续/重新扫描"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:gravity="center|right"
                android:text="货号:"
                android:textColor="@color/red"
                android:textSize="@dimen/scaner_content_tv_size" />

            <EditText
                android:id="@+id/et_goods_num"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shap_edit_5"
                android:enabled="false"
                android:inputType="number"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/scaner_content_tv_size" />

            <TextView
                android:id="@+id/btn_re_start_scaner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="right|center"
                android:text="继续/重新扫描"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="订单号:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <EditText
                android:id="@+id/et_order_name"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shap_edit_5"
                android:hint="公司"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <EditText
                android:id="@+id/et_order_num"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/shap_edit_5"
                android:inputType="number"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="手机号:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />


            <EditText
                android:id="@+id/et_phone_name"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shap_edit_5"
                android:hint="姓名"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/shap_edit_5"
                android:inputType="number"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_ex_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="快递员:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />


            <EditText
                android:id="@+id/et_ex_ps_name"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shap_edit_5"
                android:hint="姓名"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <EditText
                android:layout_width="80dp"
                android:id="@+id/et_ex_ps_phone_num"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/shap_edit_5"
                android:inputType="number"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:gravity="center|right"
                android:minWidth="60dp"
                android:text="放置地址:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />


            <TextView
                android:id="@+id/et_address_num"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center|left"
                android:background="@drawable/shap_edit_5"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<Switch-->
                <!--android:id="@+id/switch_is_smms"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="12dp"-->
                <!--android:checked="true" />-->

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_is_smms"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="发送短信"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

            <TextView
                android:id="@+id/tv_get_package_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="right|center"
                android:visibility="gone"
                android:text="集件包裹数:0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/scaner_content_tv_size" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>